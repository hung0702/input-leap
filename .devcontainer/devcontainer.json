{
  "name": "Input Leap Build Environment",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "features": {
    "ghcr.io/devcontainers/features/apt:1": {
      "packages": [
        "build-essential",
        "git",
        "cmake",
        "libavahi-compat-libdnssd-dev",
        "libcurl4-openssl-dev",
        "libgtest-dev",
        "libssl-dev",
        "libsystemd-dev",
        "libx11-dev",
        "libxext-dev",
        "libxinerama-dev",
        "libxkbcommon-dev",
        "libxtst-dev",
        "qt6-base-dev",
        "qt6-tools-dev-tools",
        "qt6-l10n-tools",
        "g++",
        "pkg-config"
      ]
    }
  },
  "remoteUser": "vscode"
}
